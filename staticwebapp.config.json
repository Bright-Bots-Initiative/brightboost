{
  "routes": [
    {
      "route": "/api/signup/teacher",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/signup/student",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/login",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/student_dashboard",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/teacher_dashboard",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/lessons*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/gamification/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/student/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/images/*.{png,jpg,gif}",
      "/css/*",
      "/js/*",
      "/*.ico",
      "/*.json"
    ]
  },
  "globalHeaders": {
    "Cache-Control": "public, max-age=31536000, immutable"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "text/javascript",
    ".css": "text/css",
    ".html": "text/html",
    ".svg": "image/svg+xml"
  }
}
