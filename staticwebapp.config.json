{
  "routes": [
    {
      "route": "/api/*",
      "serve": "https://bg-dev-func.azurewebsites.net/api/*",
      "headers": {
        "X-Forwarded-Host": "bg-dev-web.azurestaticapps.net"
      }
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*.{png,jpg,gif}", "/css/*", "/js/*", "/*.{ico,json}"]
  },
  "globalHeaders": {
    "Cache-Control": "public, max-age=31536000, immutable",
    "Content-Encoding": "br"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "text/javascript",
    ".css": "text/css",
    ".html": "text/html",
    ".svg": "image/svg+xml"
  }
}
